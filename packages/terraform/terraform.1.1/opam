
opam-version: "2.0"
synopsis: "Terraform, tflint, and TFGrunt"
description: "Installs the Terraform CLI and optionally TFLint and Terragrunt. Auto-detects latest version and installs needed dependencies."
homepage: "https://github.com/devcontainers/features/tree/main/src/terraform"
depends: [ ]
install: [
  "env"
  "VERSION=%{version}%"
  "TFLINT=%{terraform-tflint:version}%" {terraform-tflint:installed}
  "TERRAGRUNT=%{terraform-terragrunt:version}%" {terraform-terragrunt:installed}
  "INSTALL_SENTINEL=%{terraform-install-sentinel:version}%" {terraform-install-sentinel:installed}
  "INSTALL_T_FSEC=%{terraform-install-t-fsec:version}%" {terraform-install-t-fsec:installed}
  "INSTALL_TERRAFORM_DOCS=%{terraform-install-terraform-docs:version}%" {terraform-install-terraform-docs:installed}
  "HTTP_PROXY=%{terraform-http-proxy:version}%" {terraform-http-proxy:installed}
  "bash" "./src/terraform/install.sh"
]
depopts: [ "terraform-tflint" "terraform-terragrunt" "terraform-install-sentinel" "terraform-install-t-fsec" "terraform-install-terraform-docs" "terraform-http-proxy" ]
url { src: "git+https://github.com/devcontainers/features" }
