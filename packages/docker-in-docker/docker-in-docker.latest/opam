
opam-version: "2.0"
synopsis: "Docker (Docker-in-Docker)"
description: "Create child containers *inside* a container, independent from the host's docker instance. Installs Docker extension in the container along with needed CLIs."
homepage: "https://github.com/devcontainers/features/tree/main/src/docker-in-docker"
depends: [ ]
install: [
  "env"
  "VERSION=%{version}%"
  "MOBY=%{docker-in-docker-moby:version}%" {docker-in-docker-moby:installed}
  "DOCKER_DASH_COMPOSE_VERSION=%{docker-in-docker-docker-dash-compose-version:version}%" {docker-in-docker-docker-dash-compose-version:installed}
  "AZURE_DNS_AUTO_DETECTION=%{docker-in-docker-azure-dns-auto-detection:version}%" {docker-in-docker-azure-dns-auto-detection:installed}
  "DOCKER_DEFAULT_ADDRESS_POOL=%{docker-in-docker-docker-default-address-pool:version}%" {docker-in-docker-docker-default-address-pool:installed}
  "INSTALL_DOCKER_BUILDX=%{docker-in-docker-install-docker-buildx:version}%" {docker-in-docker-install-docker-buildx:installed}
  "bash" "./src/docker-in-docker/install.sh"
]
depopts: [ "docker-in-docker-moby" "docker-in-docker-docker-dash-compose-version" "docker-in-docker-azure-dns-auto-detection" "docker-in-docker-docker-default-address-pool" "docker-in-docker-install-docker-buildx" ]
url { src: "git+https://github.com/devcontainers/features" }
