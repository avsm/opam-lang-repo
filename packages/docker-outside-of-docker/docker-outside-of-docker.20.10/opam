
opam-version: "2.0"
synopsis: "Docker (docker-outside-of-docker)"
description: "Re-use the host docker socket, adding the Docker CLI to a container. Feature invokes a script to enable using a forwarded Docker socket within a container to run Docker commands."
homepage: "https://github.com/devcontainers/features/tree/main/src/docker-outside-of-docker"
depends: [ ]
install: [
  "env"
  "VERSION=%{version}%"
  "MOBY=%{docker-outside-of-docker-moby:version}%" {docker-outside-of-docker-moby:installed}
  "DOCKER_DASH_COMPOSE_VERSION=%{docker-outside-of-docker-docker-dash-compose-version:version}%" {docker-outside-of-docker-docker-dash-compose-version:installed}
  "INSTALL_DOCKER_BUILDX=%{docker-outside-of-docker-install-docker-buildx:version}%" {docker-outside-of-docker-install-docker-buildx:installed}
  "bash" "./src/docker-outside-of-docker/install.sh"
]
depopts: [ "docker-outside-of-docker-moby" "docker-outside-of-docker-docker-dash-compose-version" "docker-outside-of-docker-install-docker-buildx" ]
url { src: "git+https://github.com/devcontainers/features" }
