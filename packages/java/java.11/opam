
opam-version: "2.0"
synopsis: "Java (via SDKMAN!)"
description: "Installs Java, SDKMAN! (if not installed), and needed dependencies."
homepage: "https://github.com/devcontainers/features/tree/main/src/java"
depends: [ ]
install: [
  "env"
  "VERSION=%{version}%"
  "JDK_DISTRO=%{java-jdk-distro:version}%" {java-jdk-distro:installed}
  "INSTALL_GRADLE=%{java-install-gradle:version}%" {java-install-gradle:installed}
  "GRADLE_VERSION=%{java-gradle-version:version}%" {java-gradle-version:installed}
  "INSTALL_MAVEN=%{java-install-maven:version}%" {java-install-maven:installed}
  "MAVEN_VERSION=%{java-maven-version:version}%" {java-maven-version:installed}
  "INSTALL_ANT=%{java-install-ant:version}%" {java-install-ant:installed}
  "ANT_VERSION=%{java-ant-version:version}%" {java-ant-version:installed}
  "bash" "./src/java/install.sh"
]
depopts: [ "java-jdk-distro" "java-install-gradle" "java-gradle-version" "java-install-maven" "java-maven-version" "java-install-ant" "java-ant-version" ]
url { src: "git+https://github.com/devcontainers/features" }
